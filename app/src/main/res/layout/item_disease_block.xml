<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"

    android:elevation="6dp"
    app:cardElevation="6dp"

    android:backgroundTint="#FFFFFF"
    app:cardCornerRadius="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="#C8EFC8"

    android:outlineAmbientShadowColor="#4CAF50"
    android:outlineSpotShadowColor="#4CAF50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvDiseaseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyên nhân"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Lý do: ..."
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#333333"
            android:paddingTop="6dp" />
        <TextView
            android:id="@+id/tvSolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Giải pháp: ..."
            android:textSize="15sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#333333"
            android:paddingTop="6dp" />

        <TextView
            android:id="@+id/tvPlants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Cây thường bị: ..."
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#666666"
            android:paddingTop="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>