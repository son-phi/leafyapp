<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

<!--         Top info bar: Location (left) + Weather (right)-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_top_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

                <!-- Left: location -->
                <ImageView
                    android:id="@+id/iv_location"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="@string/cd_location"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textStyle="bold"
                    tools:text="Hà Nội"
                    app:layout_constraintStart_toEndOf="@id/iv_location"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- Right: weather (temp big + range gray + cloud) -->
                <LinearLayout
                    android:id="@+id/box_weather_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/tv_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        tools:text="30°C" />

                    <TextView
                        android:id="@+id/tv_temp_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp"
                        tools:text="(30°C · 30°C)" />

                    <ImageView
                        android:id="@+id/iv_weather"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_cloud"
                        android:contentDescription="@string/app_name" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Search bar (pill) - KHÔNG dùng TextInputLayout -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_search"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardCornerRadius="28dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp">

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    android:contentDescription="@string/search_placeholder_home"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_placeholder_home"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="16sp"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    android:includeFontPadding="false"/>

                <!-- Nút xóa (tuỳ chọn) -->
                <ImageButton
                    android:id="@+id/btn_clear"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_close"
                    android:contentDescription="@string/clear_text"
                    android:visibility="gone"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>





        <!-- Tiêu đề Plant Tools -->
        <TextView
            android:id="@+id/tv_tools_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/plant_tools"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

        <!-- Lưới 2×3 Plant Tools -->
        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/grid_tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:alignmentMode="alignMargins"
            app:columnCount="2"
            app:rowCount="3"
            app:useDefaultMargins="true">

            <!-- Tool 1 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_tool_plant"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_camera_plant"
                        android:contentDescription="@string/plant_identifier" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/plant_identifier"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tool 2 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_tool_disease"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_heart"
                        android:contentDescription="@string/disease_identifier" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/disease_identifier"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tool 3 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_tool_light"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_sun"
                        android:contentDescription="@string/light_meter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/light_meter"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tool 4 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_tool_water"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_water"
                        android:contentDescription="@string/water_meter" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="@string/water_meter"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>