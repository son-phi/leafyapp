<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.camera.LoadingActivity">

    <ImageView
        android:id="@+id/imageViewScan"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_marginTop="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/image_of_scanned_plant" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="We scan for you"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageViewScan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="We analyze your plant with AI"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="@id/tvSubtitle"
        app:layout_constraintEnd_toEndOf="@id/tvSubtitle"
        app:layout_constraintHorizontal_bias="0.5">

        <TextView
            android:id="@+id/tvAnalyzing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚪ Analyzing image"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingBottom="12dp"
            tools:text="✅ Analyzing image"
            tools:textColor="@android:color/holo_orange_light"/>

        <TextView
            android:id="@+id/tvDetecting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚪ Detecting leaves"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingBottom="12dp"
            tools:text="✅ Detecting leaves"
            tools:textColor="@android:color/holo_orange_light"/>

        <TextView
            android:id="@+id/tvIdentifying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⚪ Identifying plant"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:text="⚪ Identifying plant"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>