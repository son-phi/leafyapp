<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.leafyapp.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_garden"
        android:name="com.example.leafyapp.ui.garden.GardenFragment"
        tools:layout="@layout/fragment_garden" />

    <fragment
        android:id="@+id/navigation_camera"
        android:name="com.example.leafyapp.ui.camera.CameraFragment"
        tools:layout="@layout/fragment_camera" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.leafyapp.ui.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile" />
</navigation>
